{
  "parser": "typescript-eslint-parser",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "valid-jsdoc": [
      "error",
      {
        "requireReturn": false,
        "requireParamDescription": true,
        "requireReturnDescription": true,
        "requireReturnType": true,
        "matchDescription": ".{6,}"
      }
    ],
    "require-jsdoc": [
      "error",
      {
        "require": {
          "FunctionDeclaration": false,
          "MethodDefinition": false,
          "ClassDeclaration": true
        }
      }
    ],
    "max-statements-per-line": [
      "error",
      {
        "max": 1
      }
    ],
    "eqeqeq": [
      "error"
    ],
    "camelcase": [
      "error",
      {
        "properties": "always"
      }
    ],
    "key-spacing": [
      "error",
      {
        "beforeColon": true,
        "afterColon": true,
        "align": "colon"
      }
    ],
    "no-sparse-arrays": "error",
    "no-magic-numbers": [
      "warn",
      {
        "ignore": [
          0,
          1,
          2,
          3,
          -1,
          -2,
          -3
        ],
        "ignoreArrayIndexes": true,
        "enforceConst": true,
        "detectObjects": false
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "comma-spacing": [
      "error"
    ],
    "func-names": [
      "warn"
    ],
    "no-func-assign": [
      "error"
    ],
    "indent": [
      "error",
      "tab"
    ],
    "wrap-iife": [
      "error"
    ],
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "semi": [
      "error",
      "always"
    ],
    "semi-spacing": [
      "error",
      {
        "before": false,
        "after": true
      }
    ],
    "no-multi-spaces": "error",
    "no-spaced-func": "error",
    "no-whitespace-before-property": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "space-infix-ops": [
      "error",
      {
        "int32Hint": false
      }
    ],
    "space-unary-ops": [
      "error",
      {
        "words": true,
        "nonwords": false
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": [
          "/"
        ]
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "array-bracket-spacing": [
      "error",
      "never"
    ]
  },
  "settings": {
    "import/resolver": {
      "babel-module": {},
      "node": {
        "extensions": [
          ".js",
          ".ts"
        ]
      }
    },
    "import/parsers": {
      "typescript-eslint-parser": [
        ".js",
        ".ts"
      ]
    }
  },
  "plugins": [
    "typescript"
  ]
}