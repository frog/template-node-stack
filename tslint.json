{
  "extends": "tslint:recommended",
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "semicolon": [true, "never"],
      "quotemark": [true, "single", "avoid-escape", "avoid-template"],
      "trailing-comma": [true,
        {
          "multiline": "never",
          "singleline": "never",
          "esSpecCompliant": true
        }
      ],
      "curly": [true, "ignore-same-line"]
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}